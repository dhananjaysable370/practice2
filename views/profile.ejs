<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Application</title>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <!-- Logout Button -->
        <div class="w-full flex justify-end">
            <a class="bg-red-500 px-3 py-2 text-sm rounded-lg" href="/logout">Logout</a>
        </div>

        <!-- Main Content Area -->
        <div class="content">
            <!-- Greeting and New Post Section -->
            <div>
                <h1 class="text-3xl">Hello, <%= user.name %>
                </h1>
                <h5 class="mb-5">You can create a new post.</h5>
            </div>

            <!-- New Post Form -->
            <div>
                <form action="/post" method="post">
                    <textarea name="content" placeholder="What's on your mind?"
                        class="w-1/3 p-3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-lg block"></textarea>
                    <input type="submit" class="px-3 py-2 bg-blue-500 rounded-lg block mt-2 cursor-pointer w-40"
                        value="Create New Post">
                </form>
            </div>

            <!-- User Posts Section -->
            <div class="posts">
                <h3 class="text-md mt-12 text-zinc-400">Your posts.</h3>
                <div class="postcontainer mt-5">
                    <% user.posts.reverse().forEach(function(post) { %>
                        <div class="post w-1/3 p-3 rounded-lg mb-4 border-[1px] border-zinc-700 bg-zinc-800">
                            <h4 class="text-blue-500 mb-2">
                                @<%= user.username %>
                            </h4>
                            <p class="text-sm tracking-tight">
                                <%= post.content %>
                            </p>
                            <div class="btns flex gap-4 mt-5">
                                <a class="text-blue-500" href="">Like</a>
                                <a class="text-zinc-600" href="">Edit</a>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>